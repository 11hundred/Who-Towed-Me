
<!-- 
	Bring in Towed Vehicles Data from queries_controller 

-->




	<div class="section" id="nav">
		<div class="center">
			<div id="search">
				<div class="search-module">
					<form action="/lookup/plate/">
						<input name="plate" type="text" id="plate_search" placeholder="Search Now">
						<div class="search-close"><span class="cancel">X</span></div>
					</form>	
				</div>
			</div>	
			<div class="main-links"><a href="/" class="home">home</a> search by: <a href="#" class="search_button">plate</a> <a href="#" class="search_make">make</a></div>
				<h1>
						<%= @make %>
					<span class="menu search_button">Search</span>	
				</h1>
				
			
			<div class="lincoln"></div>
		</div>
	</div>

	<%= render "/queries/make_list"%>






	<div class="section page make">
		<ul class="list">
	
			<% @all_plates.each do |license_plate| %>

				<% date = license_plate["tow_date"] %></h4>
				<% date = date[0..-10] %></h4>
		

				<% if license_plate["state"] == "IL" %>
				<li class="illinois">
				<% elsif %>
				<li>
				<% end %>	
				<div class="container">
					<a href="/lookup/plate/?plate=<%= license_plate["plate"] %>">View this plate</a>
					<div class="center">
						<h2>
							<span class="number">
							<% if license_plate["state"] != "IL" %>
							<%= license_plate["state"] %>
							<% end %>	
							
							<%= license_plate["plate"] %>
							</span>
						</h2>
				
						<div class="details">
							<h3><%= date %></h3>
						</div>	
				
					</div>
					</div>
				</li>
  
			<% end %>

		</ul>
	</div>
		