
<!-- 
	Bring in Towed Vehicles Data from queries_controller 

-->

	<div class="section home" id="search">
		<div class="center">
			<div class="lincolns">
				<div class="lincoln"></div>	
			</div>	
			<div class="title">
				<h1><%= @make %><em>&nbsp;</em><%= @all_plates.count %> towed</h1>
			</div>
		</div>
		<div class="overlay">
		</div>
	</div>


<ul class="list">
	
	<% @all_plates.each do |license_plate| %>

		<% date = license_plate["tow_date"] %></h4>
		<% date = date[0..-10] %></h4>
		

		<% if license_plate["state"] == "IL" %>
		<li class="illinois">
		<% elsif %>
		<li>
		<% end %>	
			<a href="/lookup/plate/?plate=<%= license_plate["plate"] %>">View this plate</a>
			<div class="center">
				<h2>
					<span class="state"><%= license_plate["state"] %></span> 
					<span class="number"><%= license_plate["plate"] %></span>
				</h2>
				
				<div class="details">
					<h4>Make: <%= @make %></h4>
					<h4>Date Towed: <%= date %></h4>
				</div>	
				
			</div>
		</li>
  
	<% end %>

</ul>